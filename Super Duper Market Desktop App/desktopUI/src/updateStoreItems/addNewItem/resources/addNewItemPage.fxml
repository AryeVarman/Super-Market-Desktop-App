<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<ScrollPane fx:id="mainScrollPane" fitToHeight="true" fitToWidth="true" styleClass="backGround" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="updateStoreItems.addNewItem.AddNewItemController">
   <content>
      <VBox fx:id="mainVBox" alignment="TOP_CENTER" spacing="10.0" styleClass="backGround">
         <children>
            <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Add New Item">
               <font>
                  <Font name="System Bold" size="35.0" />
               </font>
               <styleClass>
                  <String fx:value="title" />
                  <String fx:value="txt" />
               </styleClass>
            </Text>
            <HBox prefHeight="60.0" prefWidth="600.0" styleClass="backGround" />
            <HBox alignment="CENTER" prefHeight="63.0" prefWidth="600.0" spacing="10.0" styleClass="backGround">
               <children>
                  <Label maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefWidth="120.0" text="Choose Item:">
                     <font>
                        <Font size="20.0" />
                     </font>
                     <styleClass>
                        <String fx:value="subTitle" />
                        <String fx:value="txt" />
                     </styleClass>
                  </Label>
                  <ComboBox fx:id="itemsComboBox" prefWidth="150.0" styleClass="chooser" />
               </children>
            </HBox>
            <HBox alignment="CENTER" layoutX="10.0" layoutY="156.0" prefHeight="57.0" prefWidth="600.0" spacing="10.0" styleClass="backGround">
               <children>
                  <Label prefHeight="21.0" prefWidth="10.0" />
                  <Label maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefWidth="100.0" text="Enter Price:">
                     <font>
                        <Font size="20.0" />
                     </font>
                     <styleClass>
                        <String fx:value="txt" />
                        <String fx:value="subTitle" />
                     </styleClass>
                  </Label>
                  <TextField fx:id="priceText" prefHeight="30.0" prefWidth="150.0" styleClass="chooser" />
               </children>
            </HBox>
            <HBox prefHeight="40.0" prefWidth="600.0" styleClass="backGround" />
            <HBox alignment="CENTER" prefHeight="93.0" prefWidth="600.0" spacing="100.0" styleClass="backGround">
               <children>
                  <Button fx:id="submitBtn" alignment="CENTER" mnemonicParsing="false" onAction="#onClickSubmitBtn" prefHeight="30.0" prefWidth="120.0" text="Add Item">
                     <styleClass>
                        <String fx:value="btn" />
                        <String fx:value="continueBtn" />
                     </styleClass>
                  </Button>
                  <Button fx:id="cancelBtn" alignment="CENTER" mnemonicParsing="false" onAction="#onClickCancelBtn" prefHeight="30.0" prefWidth="120.0" styleClass="btn" text="Cancel" />
               </children>
            </HBox>
         </children>
         <opaqueInsets>
            <Insets />
         </opaqueInsets>
         <padding>
            <Insets top="20.0" />
         </padding>
      </VBox>
   </content>
</ScrollPane>
